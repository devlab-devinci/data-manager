{% extends 'base.html.twig' %}

{% block title %}Data Manager{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	<div class="card">
	  <h5 class="card-header">Bienvenue sur le projet Data Manager</h5>
	  <div class="card-body">
	    <h5 class="card-title">Connectez-vous pour accéder à votre interface d'administration !</h5>
	    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
	        <a href="{{ path('app_logout') }}" class="header-wrapicon1 dis-block btn btn-primary">Déconnexion</a>

	    {% else %}
	        <a href="{{ path('app_login') }}" class="header-wrapicon1 dis-block btn btn-primary">Connexion</a>
	    {% endif %}
	  </div>
	</div>

</div>
{% endblock %}
